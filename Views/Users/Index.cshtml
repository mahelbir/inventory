@model IEnumerable<Inventory.Models.ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    var currentUser = User?.Identity?.Name;
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-dark"><i class="fas fa-eye"></i></a>
                                @if (!user.UserName.Equals(currentUser))
                                {
                                    <a class="btn btn-sm btn-danger" onclick="confirmRedirect('@Url.Action("Delete", "Users", new { id = user.Id })');"><i class="fas fa-trash"></i></a>
                                } else{
                                    <a class="btn btn-sm btn-secondary" onclick="alert('Bu kullanıcı silinemez!')"><i class="fas fa-trash"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>